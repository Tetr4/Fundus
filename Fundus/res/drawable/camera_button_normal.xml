<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="135"
                android:endColor="#DDDDDD"
                android:startColor="#AAAAAA"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp" />

            <size
                android:height="120dp"
                android:width="120dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="135"
                android:endColor="#AAAAAA"
                android:startColor="#DDDDDD"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp" />

            <size
                android:height="120dp"
                android:width="120dp" />
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <bitmap android:src="@drawable/ic_barcode" >
        </bitmap>
    </item>

</layer-list>